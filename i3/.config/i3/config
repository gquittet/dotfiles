bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 && xbacklight | cut -d. -f1 > $HOME/.cache/brightness && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 && xbacklight | cut -d. -f1 > $HOME/.cache/brightness && $refresh_i3status

