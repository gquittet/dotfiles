bar {
	position top
	status_command i3status
	colors {
		background $bg
		statusline $fg
		separator  $color7
		#                  border   backgr. text
		focused_workspace  $color15 $color8 $fg
		active_workspace   $color15 $color8 $fg
		inactive_workspace $color0  $color0 $color8
		urgent_workspace   $color1  $color9 $bg
	}
}



